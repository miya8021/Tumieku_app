<header>
  <nav class="navbar navbar-expand-md navbar-light">
    <%= link_to root_path, class: 'navbar-brand' do %>
     <p><i class="material-icons" style="vertical-align:middle; color: #F16821;">wysiwyg</i>Tumieku</p>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to root_path, class: 'nav-link' do %>
              <i class="material-icons" style="vertical-align:bottom;">home</i>ホーム
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to user_path(id: current_user.id), class: 'nav-link' do %>
              <i class="material-icons" style="vertical-align:bottom;">person_outline</i>マイページ
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to new_article_path, class: 'nav-link' do %>
              <i class="material-icons" style="vertical-align:bottom;">wysiwyg</i>今日のTumieku
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to articles_path, class: 'nav-link'  do %>
            <i class="material-icons" style="vertical-align:bottom;">forum</i>みんなのTumieku
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
              <i class="material-icons" style="vertical-align:bottom;">logout</i>ログアウト
            <% end %>
          </li>
      <% else %>
          <li class="nav-item active">
            <%= link_to new_user_registration_path, class: 'nav-link' do %>
              <i class="material-icons" style="vertical-align:bottom;">edit_note</i>アカウント登録
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to new_user_session_path, class: 'nav-link' do %>
              <i class="material-icons" style="vertical-align:bottom;">login</i>ログイン
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to users_guest_sign_in_path, method: :post, class: 'nav-link' do %>
              <i class="material-icons" style="vertical-align:bottom;">account_box</i>ゲストログイン
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>