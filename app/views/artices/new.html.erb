<h1>今日のTumiekuをつぶやこう！</h1>
<%= form_with model: @artice, local: true do |form| %>
  <div>
    <%= form.label :day, "日付" %>
    <%= form.date_field :day %>
  </div>
  <div>
    <%= form.label :body, "感想" %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit "投稿" %>
  </div>
<% end %>