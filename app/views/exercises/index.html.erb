<div class="contents-title text-center">
  <h4 class="title">エクササイズ一覧</h4>
</div>
<div class="container">
  <% @exercises.each do |exercise| %>
    <div class="card-list">
      <div class="card-body">
        <%= exercise.name %>
        <div class="float-right">
          <%= link_to edit_exercise_path(exercise) do %>
            <i class="material-icons" style="vertical-align:sub;">edit</i>
          <% end %>
          <%= link_to exercise_path(exercise), method: :delete, data: { confirm: "削除しますか？" } do %>
            <i class="material-icons" style="vertical-align:sub;">delete</i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="form-group row justify-content-center">
    <%= link_to "エクササイズ登録へ", new_exercise_path, class: 'btn btn-outline-dark btn-lg rounded-pill' %>
		<%= link_to "もどる", user_path(id: current_user.id), class: 'btn btn-outline-dark btn-lg rounded-pill' %>
  </div>
</div>