<div class="container">
  <div class="row align-items-center">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <%= form_with model: @article, local: true do |form| %>
        <div class="form-group row">
          <div class="col-md-3">
            <%= form.label :day %>
          </div>
          <div class="col-md-9">
            <%= form.date_field :day, class: 'form-control', required: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-3">
            <%= form.label :exercise_id %>
          </div>
          <div class="col-md-4">
            <%= form.collection_select :exercise_id, current_user.exercises.all, :id, :name, {prompt: ""}, class: 'form-control' %>
          </div>
          <div class="col-md-4">
            <%= form.number_field :minutes, min: "0", class: 'form-control', required: true %>
          </div>
          <div class="col-md-1">
            <%= form.label :minutes %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-3">
            <%= form.label :body %>
          </div>
          <div class="col-md-9">
            <%= form.text_area :body, class: 'form-control', required: true %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= form.submit button_value, class: 'btn btn-outline-dark btn-lg rounded-pill' %>
          <%= link_to "もどる", user_path(id: current_user.id), class: 'btn btn-outline-dark btn-lg rounded-pill' %>
        </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>