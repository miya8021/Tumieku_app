<h1>投稿詳細</h1>
<p>日付 <%= @article.day %></p>
<p>エクササイズ <%= @article.exercise.name %></p>
<p><%= @article.minutes %>分</p>
<p>感想 <%= @article.body %></p>
<p id="article-<%= @article.id %>">
  <% if @article.liked_by?(current_user) %>
    <%= render "like", post: @article %>
  <% else %>
    <%= render "dislike", post: @article %>
  <% end %>
</p>
<div>
  <h2>コメント</h2>
  <%= form_with(model: [@article, @comment], local: true) do |form| %>
    <%= form.text_area :content %>
    <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
      <i class="far fa-comments"></i> コメントする
    <% end %>
  <% end %>
</div>
<% @comments.each do |comment| %>
  <hr>
  <p><%=link_to "#{comment.user.name}", user_path(comment.user.id) %></p>
  <p><%= comment.content %></p>
  <p><%= link_to "削除",  article_comments_path(comment.article.id, comment.id), method: :delete, data: { confirm: "削除しますか？" } %></p>
<% end %>
<p>
  <% if current_user.id == @article.user_id %>
    <%= link_to "編集", edit_article_path(@article) %>
    <%= link_to "削除", article_path(@article), method: :delete, data: { confirm: "削除しますか？" } %>
  <% end %>
</p>
<p><%= link_to "みんなのTmiekuへ", articles_path %></p>