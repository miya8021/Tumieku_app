<h1>投稿詳細</h1>
<p>日付 <%= @article.day %></p>
<p>エクササイズ <%= @article.exercise.name %></p>
<p><%= @article.minutes %>分</p>
<p>感想 <%= @article.body %></p>
<p id="article-<%= @article.id %>">
  <% if @article.liked_by?(current_user) %>
    <%= render "like", post: @article %>
  <% else %>
    <%= render "dislike", post: @article %>
  <% end %>
</p>
<p>
  <% if current_user != article.user %>
      <% if article.user.followed_by?(current_user) %>
          <p><%=link_to "フォロー済み", user_relationships_path(article.user.id), method: :delete %></p>
      <% else %>
          <p><%=link_to "フォローする", user_relationships_path(article.user.id), method: :post %></p>
      <% end %>
  <% end %>
</p>
<div>
  <h2>コメント</h2>
  <%= render "comments/form" %>
  <%= render 'comments/comment' %>
</div>
<p>
  <% if current_user.id == @article.user_id %>
    <%= link_to "編集", edit_article_path(@article) %>
    <%= link_to "削除", article_path(@article), method: :delete, data: { confirm: "削除しますか？" } %>
  <% end %>
</p>
<p><%= link_to "みんなのTmiekuへ", articles_path %></p>