<% last_level = 0 %>
<% rank_status = 1 %>
<% @all_rank.each.with_index(1) do |rank, i| %>
<!--最初の値をlast_likeに保存-->
<% if i == 1 %>
<% last_level = rank[2] %>
<% end %>
 <!--lastlevelとレベルを比べて同じなら同じ順位、違うなら次の順位表示-->
<% if rank[2] != last_level %>
<% rank_status = i %>
第<%= rank_status %>位
<%= link_to rank[1], user_path(rank[0]) %>
Lv.<%= rank[2] %>
<% last_level = rank[2] %>
<% else %>
<% last_level = rank[2] %>
第<%= rank_status %>位
<%= link_to rank[1], user_path(rank[0]) %>
Lv.<%= rank[2] %>
<% end %>
<% end %>





